@model IEnumerable<WebSiteBanHang.Models.UserProduct>
@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
        <div class="card">
            <div class="card-header">
                <h3>Search</h3>
            </div>
            <div class="card-body form-group">
                @using (Html.BeginForm())
                {
                    <div class="row align-items-center">
                        <label class="col-2">Name:</label>
                        <div class="col-sm-10 mb-3">

                            <input name="searchNameUser" type="text" class="form-control" style="max-width: 100%" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>


                }
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3>User</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName("review")
                        </th>
                        <th>
                            @Html.DisplayName("name")
                        </th>
                        <th>
                            @Html.DisplayName("email")
                        </th>
                        <th>
                            @Html.Label("Edit")
                        </th>
                        <th>
                            @Html.Label("Delete")
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.reviewUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.nameUser)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.emailUser)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.idUser }, new { @class = "btn btn-outline-primary" })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.idUser }, new { @class = "btn btn-outline-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

</div>


